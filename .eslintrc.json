{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "root": true,
  "globals": {
    "chrome": true,
    "ClipboardJS": true,
    "importScripts": true,
    "Quill": true,
    "uuidv4": true,
    "moment": true,
    "$": true
  },
  "rules": {
    "arrow-body-style": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "block-scoped-var": "error",
    "block-spacing": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      "error",
      "last"
    ],
    "curly": "error",
    "eqeqeq": "error",
    "func-call-spacing": [
      "error",
      "never"
    ],
    "guard-for-in": "error",
    "quotes": [
      "error",
      "single"
    ],
    "prefer-const": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}